section#contact
	.content
		h2 Contact Us
		p If you have any questions about us, suggestions about our hats, or just want to tell us how much you love us, please feel free to contact us at any time.
		form.contact-form
			.contact-name
				label(for="name") Your Name (required)
				input(id="name" name="name")
			.contact-email
				label(for="email") Your Email (required)
				input(id="email" name="email")
			.contact-subject
				label(for="subject") Subject
				input(id="subject" name="subject")
			.contact-message
				label(for="message") Your Message
				textarea(id="message" name="message")
			.contact-submit
				input(type="button" value="Submit")
		h3 Find us on
		nav.social-nav
			ul.social-nav-items
				li.facebook: a(href="#") Facebook				
				li.twitter: a(href="#") Twitter
				li.instagram: a(href="#") Instagram
				li.tumblr: a(href="#") Tumblr
